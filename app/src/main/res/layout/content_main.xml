<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Welcome to DJ FIT"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginTop="31dp"
            android:text="Individual Background"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <Button
            android:id="@+id/btnWorkoutOutline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnBackground"
            android:text="Workout Outline"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <Button
            android:id="@+id/btnRegisterTrainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnWorkoutOutline"
            android:text="Become Trainer"
            android:textAppearance="@android:style/TextAppearance.Large"/>

        <Button
            android:id="@+id/btnTrainerProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnRegisterTrainer"
            android:text="My Profile Page"
            android:textAppearance="@android:style/TextAppearance.Large"/>
        <Button
            android:id="@+id/btnFindTrainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnTrainerProfile"
            android:text="Find Trainer"
            android:textAppearance="@android:style/TextAppearance.Large"/>

        <Button
            android:id="@+id/btnClientRequests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnFindTrainer"
            android:text="Client Requests"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <Button
            android:id="@+id/btnCurrentClients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnClientRequests"
            android:text="Current Clients"
            android:textAppearance="@android:style/TextAppearance.Large" />

    </RelativeLayout>
</ScrollView>
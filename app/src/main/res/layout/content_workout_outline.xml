<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context=".WorkoutOutline"
            tools:showIn="@layout/activity_workout_outline"
            android:id="@+id/activity_workout_outline">

    <RelativeLayout
        android:id="@+id/botButtons"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btnSaveOutline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:text="Save Routine"
            android:textAppearance="@android:style/TextAppearance.Large" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/topContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnAddDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="113dp"
            android:text="Add Day to Routine"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <TextView
            android:id="@+id/repRangeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="23dp"
            android:text="Repetition Range:"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/repRangeEdit"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/repRangeText"
            android:layout_toRightOf="@+id/repRangeText"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <TextView
            android:id="@+id/hrText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/repRangeEdit"
            android:layout_toRightOf="@+id/repRangeEdit"
            android:text="Target HR:"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/hrEdit"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/hrText"
            android:layout_toRightOf="@+id/hrText"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/restPeriodText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="61dp"
            android:text="Rest Period:"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/restPeriodEdit"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="54dp"
            android:layout_toEndOf="@+id/restPeriodText"
            android:layout_toRightOf="@+id/restPeriodText"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/setsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="56dp"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="61dp"
            android:layout_toEndOf="@+id/restPeriodEdit"
            android:layout_toRightOf="@+id/restPeriodEdit"
            android:text="Sets:"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/setsEdit"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="57dp"
            android:layout_toEndOf="@+id/setsText"
            android:layout_toRightOf="@+id/setsText"
            android:ems="10"
            android:inputType="textPersonName" />

    </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/botButtons"
                android:layout_below="@id/topContent">

            <RelativeLayout
                android:id="@+id/relativeScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dayLabel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="477dp"
                    android:gravity="center"
                    android:text="Monday"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/myTable"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:text="Tuesday"
                    android:textSize="30sp"/>

                <TableLayout
                    android:id="@+id/myTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dayLabel"
                    android:layout_marginTop="25dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_weight="50"
                            android:gravity="center"
                            android:text="Exercise"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_weight="20"
                            android:gravity="center"
                            android:text="Target"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_weight="15"
                            android:gravity="center"
                            android:text="Weight Min"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_weight="15"
                            android:gravity="center"
                            android:text="Weight Max"
                            android:textSize="10sp" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_height="match_parent"
                            android:layout_weight="100"
                            android:background="@drawable/edit_border"
                            android:text="Chest"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow>

                        <EditText
                            android:layout_weight="50"
                            android:background="@drawable/edit_border"
                            android:hint="Exercise name \n(Warm up)"
                            android:maxLength="40"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/clickView"
                            android:layout_height="match_parent"
                            android:layout_weight="20"
                            android:background="@drawable/edit_border"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="View"
                            android:textSize="14sp" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="15"
                            android:background="@drawable/edit_border"
                            android:gravity="center"
                            android:hint="#"
                            android:textSize="14sp" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="15"
                            android:background="@drawable/edit_border"
                            android:gravity="center"
                            android:hint="#"
                            android:textSize="14sp" />

                    </TableRow>

                    <TableRow>


                        <EditText
                            android:layout_weight="50"
                            android:lines="2"
                            android:background="@drawable/edit_border"
                            android:hint="Exercise name"
                            android:maxLength="40"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/clickView2"
                            android:layout_height="match_parent"
                            android:layout_weight="20"
                            android:background="@drawable/edit_border"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="View"
                            android:textSize="14sp" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="15"
                            android:background="@drawable/edit_border"
                            android:gravity="center"
                            android:hint="#"
                            android:textSize="14sp" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="15"
                            android:background="@drawable/edit_border"
                            android:gravity="center"
                            android:hint="#"
                            android:textSize="14sp" />

                    </TableRow>

                    <TableRow>


                        <EditText
                            android:layout_weight="50"
                            android:background="@drawable/edit_border"
                            android:hint="Exercise name"
                            android:inputType="textMultiLine"
                            android:lines="2"
                            android:maxLength="40"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_height="match_parent"
                            android:layout_weight="20"
                            android:background="@drawable/edit_border"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="View"
                            android:textSize="14sp" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="15"
                            android:background="@drawable/edit_border"
                            android:gravity="center"
                            android:hint="#"
                            android:textSize="14sp" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="15"
                            android:background="@drawable/edit_border"
                            android:gravity="center"
                            android:hint="#"
                            android:textSize="14sp" />

                    </TableRow>

                    <TableRow>


                        <EditText
                            android:layout_weight="50"
                            android:background="@drawable/edit_border"
                            android:hint="Exercise name"
                            android:inputType="textMultiLine"
                            android:lines="2"
                            android:maxLength="40"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_height="match_parent"
                            android:layout_weight="20"
                            android:background="@drawable/edit_border"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="View"
                            android:textSize="14sp" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="15"
                            android:background="@drawable/edit_border"
                            android:gravity="center"
                            android:hint="#"
                            android:textSize="14sp" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="15"
                            android:background="@drawable/edit_border"
                            android:gravity="center"
                            android:hint="#"
                            android:textSize="14sp" />

                    </TableRow>

                    <TableRow>


                        <EditText
                            android:layout_weight="50"
                            android:background="@drawable/edit_border"
                            android:hint="Exercise name"
                            android:inputType="textMultiLine"
                            android:lines="2"
                            android:maxLength="40"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_height="match_parent"
                            android:layout_weight="20"
                            android:background="@drawable/edit_border"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="View"
                            android:textSize="14sp" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="15"
                            android:background="@drawable/edit_border"
                            android:gravity="center"
                            android:hint="#"
                            android:textSize="14sp" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="15"
                            android:background="@drawable/edit_border"
                            android:gravity="center"
                            android:hint="#"
                            android:textSize="14sp" />

                    </TableRow>

                </TableLayout>
            </RelativeLayout>

            </ScrollView>
</RelativeLayout>